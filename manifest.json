{
  "name": "ESROO CHECK INCIDENTS",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Расширение позволяющее отслеживать инциденты в ЕСРОО.",
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
        "jquery-3.5.1.min.js",
        "IndexedDB/db.js",
        "helper.js",
        "background.js"
        ]
  },
  
  "permissions": [
    "http://10.128.21.4/*",
    /*"http://ppoz-service-bal-01.prod.egrn/*",*/
    "storage",
    "unlimitedStorage",
    "unlimited_storage"
  ],
  
  "browser_action": {
    "default_title": "ESROO CHECK INCIDENTS",
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  
  "content_scripts": [{
    "matches": ["http://10.128.21.4/*"],
    /*"exclude_matches": ["http://ppoz-service-bal-01.prod.egrn:9001/#/administration"],*/
    "js": [
        "jquery-3.5.1.min.js",
        "IndexedDB/exdb.js",
        "content.js"
    ],
    
    "css": [
      "content.css"
    ]    
  }]
}
